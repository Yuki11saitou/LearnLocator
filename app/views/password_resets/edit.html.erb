<% content_for(:title, t('.title')) %>

<div class="flex flex-col justify-center items-center min-h-screen">

    <%= render 'shared/title', title: t('.title') %>
    <div class="mb-10"></div>

    <%= form_with model: @user, url: password_reset_path(@token), method: :patch do |f| %>

        <%# エラーメッセージ %>
        <%= render 'shared/error_messages', object: f.object %>

        <div class="mb-3">
            <div class="flex items-center gap-2">
                <%= image_tag 'email.svg', class: "h-4 w-4 opacity-70" %>
                <span class="text-md font-bold break-all">
                    <%= @user.email %>
                </span>
            </div>
        </div>
        <div class="mb-3">
            <div class="input input-bordered flex items-center gap-2">
                <%= image_tag 'key_mark.svg', class: "h-4 w-4 opacity-70" %>
                <%= f.password_field :password, placeholder: t('.password'), class: "w-full" %>
            </div>
        </div>
        <div class="mb-3">
            <div class="input input-bordered flex items-center gap-2">
                <%= image_tag 'key_mark.svg', class: "h-4 w-4 opacity-70" %>
                <%= f.password_field :password_confirmation, placeholder: t('.password_confirmation'), class: "w-full" %>
            </div>
        </div>
        <div class="flex justify-center">
            <%= f.submit t('.submit'), class: "btn", id: 'submit_button' %>
        </div>
    <% end %>

    <div class="text-center my-6">
        <%= link_to t('.to_login_page'), login_path, class: "btn btn-link" %>
        |
        <%= link_to t('.new_register'), new_user_path, class: "btn btn-link" %>
    </div>

    <div class="mb-28"></div>

</div>