<% content_for(:title, t('.title')) %>

<div class="w-5/6 mx-auto max-w-sm md:max-w-4xl">
    <div class="mt-4">
        <%# 戻るボタン、タイトル（同じ高さに表示） %>
        <div class="flex items-center justify-center relative">
            <%# 戻るボタン %>
            <div class="absolute left-0 mt-2">
                <%= link_to profile_path, class: "btn btn-sm text-xs" do %>
                    <%= image_tag 'page_back_mark.svg', class: "h-3 w-3" %>
                    <%= t('.back') %>
                <% end %>
            </div>

            <%# タイトル %>
            <div class="text-sm font-bold">
                <%= t('.title') %>
            </div>
        </div>

        <%# 検索フォーム %>
        <div class="mt-8">
            <form>
                <%= render 'reviews/search_form', q: @q, url: my_reviews_path, placeholder_text: t('search_form.placeholder.for_my_review') %>
            </form>
        </div>
    </div>
</div>

<%# 並べ替え機能 %>
<div class="mb-3">
    <%= render 'reviews/sort_links', q: @q %>
</div>

<div class="w-5/6 mx-auto max-w-sm md:max-w-4xl">
    <div class="mt-4 mb-28">
        <div class="mt-6">
            <% if @my_reviews.present? %>
                <%# 投稿した口コミ %>
                <%= render partial: 'reviews/review', collection: @my_reviews, as: :review, locals: { show_spot_name: true } %>
                <%# ページネーション %>
                <%= paginate @my_reviews %>
            <% else %>
                <div class="text-center">
                    <%= t('.no_data') %>
                </div>
            <% end %>
        </div>
    </div>
</div>