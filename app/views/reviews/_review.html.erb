<%# 口コミ表示 %>
<div id="review-<%= review.id %>" class="review-item">
    <div class="">
        <div class="card my-4 shadow-md border-2 rounded-md">
            <div class="mx-3 my-3">

                <%# 施設名とカテゴリを表示（オプション） %>
                <% if show_spot_name %>
                    <%# 施設名 %>
                    <div class="text-sm font-bold">
                        <%= link_to review.spot.name, spot_path(review.spot), class: "link" %>
                    </div>
                    <div class="mt-1"></div>
                    <%# カテゴリ名 %>
                    <div class="text-xs font-bold badge badge-ghost">
                        <%= review.spot.category.name %>
                    </div>
                    <div class="mt-3"></div>
                <% end %>

                <%# 名前 %>
                <div class="text-sm font-bold">
                    <%= review.user.name %>
                </div>
                <div class="mt-1"></div>
                <%# 作成日時 %>
                <div class="text-xs">
                    <%= l(review.created_at, format: :long) %>
                </div>
                <div class="mt-1"></div>
                <%# 区切り線 %>
                <hr>
                <div class="mt-1"></div>
                <%# 口コミ内容 %>
                <div class="text-md">
                    <%= simple_format(h(review.body)) %>
                </div>

                <div class="mt-4"></div>
                <%# 編集、削除、Xシェア、いいねリンク %>
                <div>
                    <ul class="flex justify-between w-full">
                        <%# 左寄せ %>
                        <div class="flex space-x-4 ml-2">
                            <% if logged_in? %>
                                <% if current_user.own?(review) %>
                                    <%# 編集リンク %>
                                    <li>
                                        <%= link_to edit_review_path(review) do %>
                                            <%= image_tag 'edit_pen_mark.svg', class: "h-4 w-4" %>
                                        <% end %>
                                    </li>
                                    <%# 削除リンク %>
                                    <li>
                                        <%= link_to review_path(review), data: { turbo_method: :delete, turbo_confirm: t('turbo_stream.delete.confirm') } do %>
                                            <%= image_tag 'destroy_trash_mark.svg', class: "h-4 w-4" %>
                                        <% end %>
                                    </li>
                                <% end %>
                            <% end %>
                        </div>
                        <%# 右寄せ %>
                        <div class="flex space-x-4 mr-2">
                            <% if logged_in? %>
                                <% if current_user.own?(review) %>
                                    <%# Xシェアボタン %>
                                    <li>
                                        <%= link_to '#' do %>
                                            <%= image_tag 'x_mark.svg', class: "h-4 w-4" %>
                                        <% end %>
                                    </li>
                                <% end %>
                                <li class="flex items-center">
                                    <%# いいねボタン %>
                                    <div class="mr-1">
                                        <%= render 'reviews/like_buttons', { review: review } %>
                                    </div>
                                    <%# いいね数 %>
                                    <div class="text-xs text-gray-500 w-[2ch] text-left" id="like-count-<%= review.id %>"> <%# w-[2ch]の設定により2桁分の幅を確保。text-leftで左揃え %>
                                        <%= review.likes.count %>
                                    </div>
                                </li>
                            <% end %>
                        </div>
                    </ul>
                </div>

            </div>
        </div>
    </div>
</div>