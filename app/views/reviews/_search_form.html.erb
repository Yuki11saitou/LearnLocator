<%= search_form_for q, url: url do |f| %>
    <div class="my-3 mx-8">
        <div class="mx-auto flex justify-center w-full max-w-md md:max-w-2xl">
            <div class="flex space-x-1 w-full">
                <%# 入力欄 %>
                <%= f.search_field :spot_name_or_user_name_or_body_cont, class: 'input input-bordered text-xs w-full', placeholder: placeholder_text %>

                <%# 検索ボタン %>
                <%= button_tag(type: 'submit', class: 'btn text-xs') do %>
                    <%= image_tag 'search_mark.svg', class: "h-4 w-4" %>
                <% end %>
            </div>
        </div>
    </div>
<% end %>