<% content_for(:title, t('.title', name: @spot.name)) %>

<div class="mt-4 mb-24">
    <div class="w-5/6 mx-auto max-w-sm md:max-w-4xl">
        <%# 戻るボタン %>
        <%= link_to spot_path(@spot), class: "btn btn-sm text-xs" do %>
            <%= image_tag 'page_back_mark.svg', class: "h-3 w-3" %>
            <%= t('.back') %>
        <% end %>
        <%# 口コミ投稿フォーム %>
        <div class="mt-6">
            <label class="form-control">
                <div id="review-form">
                    <%= form_with model: @review, url: review_path(@review) do |f| %>

                        <%# エラーメッセージ %>
                        <%= render 'shared/error_messages', object: f.object %>

                        <%# ラベルとして、施設名を表示 %>
                        <%= f.label @spot.name, class: "text-sm" %>

                        <%# テキストエリア %>
                        <div class="mt-1">
                            <div class="card shadow-xl">
                                <%= f.text_area :body, class: "textarea textarea-bordered h-48", placeholder: t('.placeholder') %>
                            </div>
                        </div>

                        <%# 送信ボタン %>
                        <div class="flex flex-col justify-center items-center">
                            <div class="mt-6">
                                <%= f.submit t('.update'), class: "btn btn-outline btn-primary" %>
                            </div>
                        </div>
                    <% end %>
                </div>
            </label>
        </div>
    </div>
</div>