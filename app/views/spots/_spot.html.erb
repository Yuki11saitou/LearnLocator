
<div id="spot-id-<%= spot.id %>">
    <div class="card shadow-xl">
        <div class="m-4">

            <%# Xシェア、ブックマークリンク表示エリア %>
            <div class="mt-5">
                <ul class="flex justify-between w-full">
                    <%# 左寄せ %>
                    <div class="font-bold text-md">
                        <%# Spot名 %>
                        <%= link_to spot.name, spot_path(spot), class: "link" %>
                    </div>
                    <%# 右寄せ %>
                    <div class="flex-shrink-0 ml-4 mr-1"> <%# flex-shrink-0 でボタンが縮小されぬよう制御 %>
                        <% if logged_in? %>
                            <%# ブックマークボタン %>
                            <%= render 'spots/bookmark_buttons', { spot: spot } %>
                        <% end %>
                    </div>
                </ul>
            </div>

            <%# バッジ表示エリア %>
            <div class="mb-4 mt-4">
                <div class="flex justify-start items-center">
                    <%# カテゴリ名 %>
                    <div class="text-xs text-white font-bold badge badge-primary">
                        <%= spot.category.name %>
                    </div>
                    <%# レーティング %>
                    <div class="mr-2"></div>
                    <% if spot.rating.present? %>
                        <div class="text-xs text-white font-bold badge badge-primary">
                            <%= image_tag 'rating_mark.svg', class: "h-3 w-3 mr-1" %>
                            <%= spot.rating %>
                        </div>
                    <% end %>
                    <%# いいね数 %>
                    <div class="mr-2"></div>
                    <div id="review_count" class="text-xs text-white font-bold badge badge-primary">
                        <%= image_tag 'review_mark.svg', class: "h-3 w-3 mr-1" %>
                        <%= spot.reviews.count %>
                    </div>
                </div>
            </div>

            <%# Spot住所 %>
            <div class="mb-2">
                <div class="flex justify-start">
                    <div class="mr-2">
                        <%= image_tag 'address.svg', class: "h-4 w-4" %>
                    </div>
                    <div class="text-sm">
                        <%= spot.address %>
                    </div>
                </div>
            </div>

            <%# Spot公式HP %>
            <div class="mb-2">
                <div class="flex justify-start">
                    <div class="mr-2">
                        <%= image_tag 'web_site.svg', class: "h-4 w-4" %>
                    </div>
                    <div class="text-sm">
                        <% if spot.web_site.present? %>
                            <%= link_to "公式HPリンク", "#{spot.web_site}", target: :_blank, rel: "noopener noreferrer", class: "link" %>
                        <% else %>
                            <p><%= t('spots.index.no_data') %></p>
                        <% end %>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>
