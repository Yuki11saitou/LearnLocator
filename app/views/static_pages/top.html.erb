<%# 勉強種別に対する説明のダイアログ設定 %>
<dialog id="spot_difference_modal" class="modal">
    <div class="modal-box">
        <h3 class="text-base font-bold text-primary text-center">
            <%= t('spot_difference_modal.title') %>
        </h3>
        <p class="text-sm py-4">
            <%= t('spot_difference_modal.description.title_html').html_safe %>
        </p>
        <div class="text-sm space-y-4">
            <hr class="my-4 border-gray-300">
            <div>
                <p class="font-semibold mb-2">
                    <%= t('spot_difference_modal.description.study_room.title') %>
                </p>
                <ul class="list-disc pl-5 space-y-1">
                    <%= t('spot_difference_modal.description.study_room.description_html').html_safe %>
                </ul>
            </div>
            <hr class="my-4 border-gray-300">
            <div>
                <p class="font-semibold mb-2">
                    <%= t('spot_difference_modal.description.co_working_space.title') %>
                </p>
                <ul class="list-disc pl-5 space-y-1">
                    <%= t('spot_difference_modal.description.co_working_space.description_html').html_safe %>
                </ul>
            </div>
        </div>
        <div class="modal-action">
            <%# 閉じるボタン %>
            <%= button_tag t('spot_difference_modal.close'), type: 'button', class: 'btn', onclick: "document.getElementById('spot_difference_modal').close();" %>
        </div>
    </div>
</dialog>

<%# 登録場所に関する情報のダイアログ設定 %>
