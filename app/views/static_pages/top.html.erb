        </div>
        <div class="modal-action">
            <%# 閉じるボタン %>
            <%= button_tag t('spot_info_modal.close'), type: 'button', class: 'btn', onclick: "document.getElementById('spot_info_modal').close();" %>
        </div>
    </div>
</dialog>