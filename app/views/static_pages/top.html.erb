<div class="mt-6 mb-28">
    <div class="flex flex-col justify-center items-center">
        <%# タイトル %>
        <div class="mb-16">
            <h1 class="text-4xl font-bold mb-2 text-center"><%= t('.title') %></h1>
            <p class="text-lg text-center">- <%= t('.sub_title') %> -</p>
        </div>

        <%# トップ画像 %>
        <div class="w-5/6 mx-auto max-w-sm md:max-w-2xl mb-6">
