<% content_for(:title, t('.title')) %>
<div class="flex flex-col justify-center items-center min-h-screen">

        <h1 class="text-lg font-bold"><%= t('.title') %></h1>
        <%= form_with url: login_path do |f| %>
            <div class="mb-3">
                <%= f.label t('.email') %>
                <%= f.email_field :email, class: "form-control" %>
            </div>
            <div class="mb-3">
                <%= f.label t('.password') %>
                <%= f.password_field :password, placeholder: t('.placeholder.password'), class: "form-control" %>
            </div>
            <div class="flex justify-center">
                <%= f.submit t('.login'), class: "btn btn-primary" %>
            </div>
        <% end %>
        <div class="text-center my-6">
            <%= link_to t('.new_register'), new_user_path %>
            |
            <%= link_to t('.password_forget'), '#' %>
        </div>

</div>

