<% content_for(:title, t('.title')) %>
<div class="flex flex-col justify-center items-center min-h-screen">

        <h1 class="text-lg font-bold"><%= t('.title') %></h1>
        <%= form_with model: @user do |f| %>
            <div class="mb-3">
                <%= f.label t('.name'), class: "" %>
                <%= f.text_field :name, class: "form-control" %>
            </div>
            <div class="mb-3">
                <%= f.label t('.email'), class: "" %>
                <%= f.email_field :email, class: "form-control" %>
            </div>
            <div class="mb-3">
                <%= f.label t('.password'), class: "" %>
                <%= f.password_field :password, placeholder: t('.placeholder.password'), class: "form-control" %>
            </div>
            <div class="mb-3">
                <%= f.label t('.password_confirmation'), class: "" %>
                <%= f.password_field :password_confirmation, placeholder: t('.placeholder.password_confirmation'), class: "form-control" %>
            </div>
            <div class="flex justify-center">
                <%= f.submit t('.submit'), class: "btn btn-primary" %>
            </div>
        <% end %>
        <div class='text-center my-6'>
            <%= link_to t('.to_login_page'), login_path %>
            |
            <%= link_to t('.password_forget'), '#' %>
        </div>

</div>


