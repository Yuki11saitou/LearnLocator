<div class="flex flex-col justify-center items-center min-h-screen">

        <h1 class="text-lg font-bold">新規登録</h1>
        <%= form_with model: @user do |f| %>
            <div class="mb-3">
                <%= f.label '名前', class: "form-label" %>
                <%= f.text_field :name, class: "form-control" %>
            </div>
            <div class="mb-3">
                <%= f.label 'メール', class: "form-label" %>
                <%= f.email_field :email, class: "form-control" %>
            </div>
            <div class="mb-3">
                <%= f.label 'パスワード', class: "form-label" %>
                <%= f.password_field :password, placeholder: '4文字以上', class: "form-control" %>
            </div>
            <div class="mb-3">
                <%= f.label 'パスワード確認', class: "form-label" %>
                <%= f.password_field :password_confirmation, placeholder: '4文字以上', class: "form-control" %>
            </div>
            <div class="flex justify-center">
                <%= f.submit '登録', class: "btn btn-primary" %>
            </div>
        <% end %>
        <div class='text-center my-6'>
            <%= link_to 'ログインページへ', login_path %>
            |
            <%= link_to 'パスワードをお忘れの方はこちら', '#' %>
        </div>

</div>


